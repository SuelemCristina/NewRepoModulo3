<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgenciaBoaViagem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgenciaBoaViagem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <input type="checkbox" id="check">
            <label for="check" class="checkbtn">
                <i class="fas fa-bars"></i>
            </label>
            <label class="logo"><img src="../img/logo.jpg" width="100" height="80"></label>
            <ul>
                <li><a  asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a  asp-controller="Home" asp-action="Destinos">Destino</a></li>
                <li><a  asp-controller="Promocoes" asp-action="Promocoes">Promoções</a></li>
                <li><a  asp-controller="Contato" asp-action="Contato">Contato</a></li>
            </ul>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AgenciaBoaViagem - Todos os direitos reservados. <a asp-area="" asp-controller="Contato" asp-action="Contatos">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
